<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Main$PlaceholderFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="6"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Strokerate"
            android:id="@+id/strokerateheader"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textSize="30dp"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="12"
            android:id="@+id/strokerate"
            android:layout_below="@+id/pace"
            android:layout_alignParentStart="true"
            android:textSize="80dp"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="t/500m"
            android:id="@+id/paceheader"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textSize="30dp"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heart"
            android:id="@+id/heartrateheader"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textSize="30dp"
            android:layout_row="2"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="2:00"
            android:id="@+id/pace"
            android:layout_alignTop="@+id/textView4"
            android:layout_alignParentEnd="true"
            android:textSize="60dp"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="55"
            android:id="@+id/heartrate"
            android:layout_below="@+id/strokeratetext"
            android:layout_alignParentStart="true"
            android:textSize="60dp"
            android:layout_row="3"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="t/500m ave"
            android:id="@+id/avepaceheader"
            android:layout_below="@+id/textView5"
            android:layout_alignParentEnd="true"
            android:textSize="30dp"
            android:layout_row="4"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="2:00"
            android:id="@+id/avepace"
            android:layout_alignTop="@+id/textView4"
            android:layout_alignParentEnd="true"
            android:textSize="60dp"
            android:layout_row="5"
            android:layout_column="0" />
    </GridLayout>
</RelativeLayout>
